{
	"name": "Existing Dockerfile",

	"context": "..",

	// "dockerFile": "../docker/Dockerfile",
	"image": "ostrack_simple:latest",

	"runArgs": [
		"--gpus", "all",
		//"-v", "${env:HOME}${env:USERPROFILE}/.ssh:/root/.ssh-localhost:ro",
		//"-v", "/media/NAS/DataScienceShared/datasets/vision/structured/coco:/data",
		//"-p", "1414:1414",

		//for GUI
		"--privileged",
		"-v", "/tmp/.X11-unix:/tmp/.X11-unix",
		"-e", "DISPLAY=${localEnv:DISPLAY}",
		"-e", "QT_X11_NO_MITSHM=1",
		"-e", "QT_QPA_PLATFORM_PLUGIN_PATH=/usr/local/lib/python3.8/dist-packages/cv2/qt/plugins/platforms/",
		"--ipc", "host"
		//find / -name "libqxcb.so" 2>/dev/null
		//xhost +
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"njpwerner.autodocstring"
			]
		}
	}
}